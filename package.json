{
	"name": "rotector-extension-v2",
	"description": "Real-time warnings about inappropriate Roblox users before you interact with them.",
	"private": true,
	"version": "2.12.0",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"dev:edge": "wxt -b edge",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"build:edge": "wxt build -b edge",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"zip:edge": "wxt zip -b edge",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint . --cache && prettier --check .",
		"lint:fix": "eslint . --cache --fix && prettier --write .",
		"knip": "knip",
		"knip:production": "knip --production",
		"validate:i18n": "node scripts/validate-i18n.js",
		"format:i18n": "node scripts/format-i18n.js",
		"quality": "bun run check && bun run knip && bun run validate:i18n && bun run lint:fix",
		"postinstall": "wxt prepare",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/vite": "^4.1.18",
		"@types/three": "^0.182.0",
		"@types/turndown": "^5.0.6",
		"@wxt-dev/module-svelte": "^2.0.4",
		"autoprefixer": "^10.4.23",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-better-tailwindcss": "^4.0.1",
		"eslint-plugin-svelte": "^3.14.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^17.1.0",
		"knip": "^5.82.1",
		"lightningcss": "^1.31.1",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.48.0",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"wxt": "^0.20.13"
	},
	"dependencies": {
		"@icons-pack/svelte-simple-icons": "^6.5.0",
		"lucide-svelte": "^0.563.0",
		"lz-string": "^1.5.0",
		"svelte-highlight": "^7.9.0",
		"svelte-i18n": "^4.0.1",
		"svelte-portal": "^2.2.1",
		"three": "^0.182.0",
		"turndown": "^7.2.2"
	}
}
