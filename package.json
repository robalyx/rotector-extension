{
	"name": "rotector-extension-v2",
	"description": "Real-time warnings about inappropriate Roblox users before you interact with them.",
	"private": true,
	"version": "2.4.0",
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"dev:edge": "wxt -b edge",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"build:edge": "wxt build -b edge",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"zip:edge": "wxt zip -b edge",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint . && prettier --check .",
		"lint:fix": "eslint . --fix && prettier --write .",
		"knip": "knip",
		"knip:production": "knip --production",
		"quality": "bun run check && bun run knip && bun run lint:fix",
		"postinstall": "wxt prepare",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@tailwindcss/postcss": "^4.1.14",
		"@tailwindcss/vite": "^4.1.14",
		"@wxt-dev/module-svelte": "^2.0.4",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.2.3",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-better-tailwindcss": "^3.7.10",
		"eslint-plugin-svelte": "^3.12.4",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0",
		"knip": "^5.66.0",
		"lightningcss": "^1.30.2",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"svelte-eslint-parser": "^1.3.3",
		"tailwindcss": "^4.1.14",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"wxt": "^0.20.11"
	},
	"dependencies": {
		"lucide-svelte": "^0.546.0",
		"svelte-portal": "^2.2.1"
	}
}
